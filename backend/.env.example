# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Agentium Environment Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Application
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production
ENCRYPTION_KEY=your-fernet-key-here-generate-with-cryptography

# Database (PostgreSQL)
DATABASE_URL=postgresql://agentium:agentium@localhost:5432/agentium

# Redis (Message Bus - Phase 1)
REDIS_URL=redis://localhost:6379/0

# Vector Database (ChromaDB - Phase 0.5/1)
CHROMA_HOST=localhost        # Set to 'chromadb' if using Docker
CHROMA_PORT=8001             # 8001 to avoid conflict with backend
CHROMA_PERSIST_DIR=./chroma_data
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Message Bus Configuration (Phase 1)
MESSAGE_BUS_ENABLED=true
MESSAGE_TTL_SECONDS=86400    # 24 hours

# Rate Limits (msg/sec per tier)
RATE_LIMIT_HEAD=100
RATE_LIMIT_COUNCIL=20
RATE_LIMIT_LEAD=10
RATE_LIMIT_TASK=5

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# AI Providers (Optional)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=...